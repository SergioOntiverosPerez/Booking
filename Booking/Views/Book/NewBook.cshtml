@{
    ViewBag.Title = "Novo Livro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Novo Livro</h2>


<div class="form-group" id="postform">
    <div class="form-group">
        <label class="text-info">Código do Livro</label>
        <input type="number" id="add-code" placeholder="Entre o código do livro">
    </div>
    <div class="form-group">
        <label class="text-info">Titulo do Livro</label>
        <input type="text" id="add-title" placeholder="Entre o título do livro">
    </div>
    <div class="form-group">
        <label class="text-info">Preço do Livro</label>
        <input type="number" id="add-price" placeholder="Entre o preço do livro">
    </div>
    <div class="form-group">
        <label class="text-info">Data de Cadastro</label>
        <input type="date" id="add-date">
    </div>

    <button class="btn btn-info" id="save">Salvar</button>
    <button class="btn btn-danger" id="cancelar">Cancelar</button>
</div>  
    
@section scripts{
    <script src="~/js/NewBook.js" asp-append-version="true"></script>
 }
