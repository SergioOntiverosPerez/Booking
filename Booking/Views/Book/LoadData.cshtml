@model Booking.ViewModels.BooksViewModel
@{
    ViewData["Title"] = "Livros em Stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Livros Cadastrados</h1>

<table class="table table-striped table-bordered" id="books">
    <thead>
        <tr>
            <th>Código do Livro</th>
            <th>Nome do Livro</th>
            <th>Preço</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Código do Livro</th>
            <th>Nome do Livro</th>
            <th>Preço</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Code</td>
                <td>@book.Title</td>
                <td>@book.Price</td>
            </tr>
        }
    </tbody>
</table>